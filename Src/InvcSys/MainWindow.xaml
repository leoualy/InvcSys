<Window x:Class="InvcSys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:InvcSys.ViewController"
        Title="MainWindow" Height="640" Width="780" 
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="{x:Null}" 
        AllowsTransparency="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        >
    <Border CornerRadius="6,6,0,0" Background="#6495ED" BorderThickness="0">
        <Grid Margin="3,0,3,3">
            <Grid.RowDefinitions>
                <RowDefinition Height="24"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center">发票处理</TextBlock>
            
            <!--内容部分-->
            <Grid Grid.Row="1">
                <local:MainViewController/>
            </Grid>
            <!--内容部分-->
        
        
        </Grid>
    </Border>
        
    
</Window>
